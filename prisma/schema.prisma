datasource db {
  provider = "sqlite"
  url      = "file:./dev.db"
}

generator client {
  provider = "prisma-client-js"
}

model User {
  id        Int       @id @default(autoincrement())
  username  String    @unique
  password  String
  avatarUrl String?
  createdAt DateTime  @default(now())
  chats     Chat[]    @relation("UserChats")
  messages  Message[]
}

model Chat {
  id            Int       @id @default(autoincrement())
  name          String?
  createdAt     DateTime  @default(now())
  members       User[]    @relation("UserChats")
  messages      Message[]
  lastMessageId Int?      @unique
  lastMessage   Message?  @relation("LastMessage", fields: [lastMessageId], references: [id])
}

model Message {
  id            Int      @id @default(autoincrement())
  content       String // Contenido del mensaje o URL del archivo
  type          String   @default("text") // "text", "image", "audio"
  senderId      Int
  chatId        Int
  createdAt     DateTime @default(now())
  audioDuration Float? // Duraci√≥n en segundos

  sender     User  @relation(fields: [senderId], references: [id])
  chat       Chat  @relation(fields: [chatId], references: [id])
  chatAsLast Chat? @relation("LastMessage")
}
